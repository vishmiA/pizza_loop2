<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp">

    <ImageView
        android:id="@+id/pizzaImage"
        android:layout_width="90dp"
        android:layout_height="89dp" />

    <TextView
        android:id="@+id/pizzaName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:fontFamily="sans-serif-light"
        android:layout_marginLeft="8dp"
        android:paddingLeft="15dp"
        android:layout_marginTop="6dp"
        android:layout_toEndOf="@+id/pizzaImage"
        android:layout_toRightOf="@+id/pizzaImage"
        android:maxLines="1"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/pizzaPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pizzaName"
        android:layout_alignStart="@+id/pizzaName"
        android:layout_alignLeft="@+id/pizzaName"
        android:layout_alignParentRight="true"
        android:fontFamily="sans-serif-medium"
        android:layout_marginTop="30dp"
        android:gravity="right"
        android:layout_marginRight="10dp"
        android:textSize="14sp" />

</RelativeLayout>